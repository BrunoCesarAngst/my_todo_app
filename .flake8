[flake8]
ignore =
    # E501: line too long (82 > 79 characters)
    E501,
    # W503: line break before binary operator
    W503,
    # E402: Module level import not at top of file
    E402,
    # E731: Do not assign a lambda expression, use a def
    E731

# Define a máxima complexidade ciclomática
max-complexity = 10

# Exclua alguns diretórios que não fazem parte do seu código principal
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    .venv,
    .idea,
    docs,
    tests

# Define o limite de comprimento da linha
max-line-length = 100
